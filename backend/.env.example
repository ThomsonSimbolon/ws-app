# Environment
NODE_ENV=development

# Server Configuration
PORT=5005
FRONTEND_URL=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=whatsapp_service
DB_USER=root
DB_PASSWORD=
# Job Queue
JOB_MESSAGE_DELAY=2000

# Bot Safety Guard
BOT_RATE_LIMIT_PER_MINUTE=5
BOT_RATE_LIMIT_WINDOW_SEC=60

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# WhatsApp Configuration
WA_SESSION_TIMEOUT=517300
WA_MAX_SESSIONS=100

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Database Auto Setup
AUTO_CREATE_TABLES=true
AUTO_UPDATE_SCHEMA=false

# Logging
LOG_LEVEL=info

# Redis Configuration (for Bot Conversation State)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0